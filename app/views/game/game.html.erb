<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <% @start_time = Time.now.to_i %>
      <h1>Welcome to the longest word-game !</h1>
      <h2> <%= @grid %></h2>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <form class="form-inline" action="/game/score">
        <div class="form-group">
          <label for="instruction">Make the longest word with words displayed</label>
          <input type="text" name = "word" class="form-control" id="word_try" placeholder="Press the fucking btn">
          <input type="hidden" name = "grid" value="<%= @grid %>">
          <input type="hidden" name = "start_time" value=<%= @start_time %>>
        </div>
        <button type="submit" class="btn btn-default">Play!</button>
      </form>
    </div>
  </div>
</div>

